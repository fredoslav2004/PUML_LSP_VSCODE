{
  "name": "plantuml-lsp-extension",
  "displayName": "PlantUML LSP",
  "description": "Modern PlantUML extension with LSP support",
  "version": "0.0.1",
  "publisher": "vscode-samples",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/vscode-extension-samples"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:plantuml"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "plantuml",
        "aliases": [
          "PlantUML",
          "puml"
        ],
        "extensions": [
          ".puml",
          ".plantuml",
          ".iuml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "plantuml",
        "scopeName": "source.puml",
        "path": "./syntaxes/puml.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "plantuml",
        "path": "./snippets/puml.json"
      }
    ],
    "commands": [
      {
        "command": "plantuml-lsp.preview",
        "title": "PlantUML: Open Preview",
        "category": "PlantUML"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "plantuml-lsp.preview",
          "when": "editorLangId == plantuml",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install",
    "test": "sh ./scripts/test.sh"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "typescript": "^4.9.4"
  }
}
